@page "/"
@layout CustomerLayout
@using BlazorApp.Services
@using BlazorApp.Dto
@inject IAuthService AuthService
@inject IProductService ProductService
@inject NavigationManager Navigation

<PageTitle>Trang chủ - Store Manager</PageTitle>

<div class="container my-5" style="max-width: 1200px;">
    <!-- Hero Section -->
    <section class="card border-1 shadow-sm rounded-4 mb-5">
        <div class="card-body text-center p-5">
            <div class="mb-4 hero-icon-animate">
                <i class="bi bi-house-heart-fill text-success" style="font-size: 4rem;"></i>
            </div>
            <h1 class="display-4 fw-bold text-dark mb-3">Chào mừng đến với Store Manager!</h1>
            <p class="lead text-muted mb-4">Khám phá các sản phẩm tuyệt vời của chúng tôi</p>
            <a href="/products" class="btn btn-success btn-lg px-5 py-3 rounded-4 fw-bold shadow">
                <i class="bi bi-shop me-2"></i>
                Mua sắm ngay
            </a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-4">
        <h2 class="text-center fw-bold text-dark mb-5">Tại sao chọn chúng tôi?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-1 shadow-sm rounded-4 h-100 feature-card-hover">
                    <div class="card-body text-center p-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                             style="width: 70px; height: 70px; background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);">
                            <i class="bi bi-lightning-charge-fill text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="fw-bold text-dark mb-3">Giao hàng nhanh</h5>
                        <p class="text-muted">Giao hàng trong 24h với đơn nội thành</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-1 shadow-sm rounded-4 h-100 feature-card-hover">
                    <div class="card-body text-center p-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                             style="width: 70px; height: 70px; background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);">
                            <i class="bi bi-shield-check text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="fw-bold text-dark mb-3">Bảo hành chính hãng</h5>
                        <p class="text-muted">Cam kết 100% hàng chính hãng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-1 shadow-sm rounded-4 h-100 feature-card-hover">
                    <div class="card-body text-center p-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                             style="width: 70px; height: 70px; background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);">
                            <i class="bi bi-headset text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="fw-bold text-dark mb-3">Hỗ trợ 24/7</h5>
                        <p class="text-muted">Đội ngũ hỗ trợ nhiệt tình</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Products by Category Section -->
    @if (!isLoading && categories.Any())
    {
        <section class="py-5">
            <h2 class="text-center fw-bold text-dark mb-5">Sản phẩm theo danh mục</h2>
            @foreach (var category in categories.Take(3))
            {
                var categoryProducts = products.Where(p => p.CategoryId == category.CategoryId && !p.Deleted).Take(4).ToList();
                @if (categoryProducts.Any())
                {
                    <div class="mb-5">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h4 class="fw-bold text-dark mb-0">
                                <i class="bi bi-tag-fill text-success me-2"></i>
                                @category.CategoryName
                            </h4>
                            <a href="/products" class="btn btn-outline-success btn-sm rounded-pill">
                                Xem tất cả
                                <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
                            @foreach (var product in categoryProducts)
                            {
                                <div class="col">
                                    <div class="card border-0 shadow-sm rounded-4 h-100 product-card-hover" @onclick="() => ViewProduct(product.ProductId)" style="cursor: pointer;">
                                        <div class="position-relative overflow-hidden rounded-top-4" style="height: 180px; background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);">
                                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                                            {
                                                <img src="@product.ImageUrl" alt="@product.ProductName" class="w-100 h-100" style="object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center justify-content-center h-100">
                                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                                </div>
                                            }
                                            @if (product.IsInStock)
                                            {
                                                <span class="badge bg-success position-absolute top-0 end-0 m-2">Còn hàng</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">Hết hàng</span>
                                            }
                                        </div>
                                        <div class="card-body p-3">
                                            <h6 class="fw-semibold text-dark mb-2 text-truncate-2" title="@product.ProductName">@product.ProductName</h6>
                                            <div class="text-success fw-bold fs-6">@product.Price.ToString("N0") đ</div>
                                            <div class="btn btn-outline-success btn-sm w-100 mt-2 view-detail-btn">
                                                <span class="small">Xem chi tiết</span>
                                                <i class="bi bi-arrow-right ms-1"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </section>
    }
</div>

<style>
    .hero-icon-animate {
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    .feature-card-hover {
        transition: all 0.3s ease;
    }

    .feature-card-hover:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 24px rgba(46, 204, 113, 0.15) !important;
    }
    
    .product-card-hover {
        transition: all 0.3s ease;
    }

    .product-card-hover:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 24px rgba(46, 204, 113, 0.2) !important;
    }

    .view-detail-btn {
        transition: all 0.2s;
    }

    .product-card-hover:hover .view-detail-btn {
        background-color: #2ecc71;
        border-color: #2ecc71;
        color: white;
    }

    .view-detail-btn i {
        transition: transform 0.2s;
    }

    .product-card-hover:hover .view-detail-btn i {
        transform: translateX(4px);
    }
    
    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .btn-success {
        background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        border-color: #27ae60;
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
        transform: translateY(-3px);
        box-shadow: 0 8px 24px rgba(46, 204, 113, 0.4) !important;
    }
</style>

@code {
    private List<ProductDto> products = new();
    private List<CategoryDto> categories = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var allProducts = await ProductService.GetAllProductsAsync();
            products = allProducts.Where(p => !p.Deleted && p.IsInStock).ToList();
            categories = await ProductService.GetAllCategoriesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ViewProduct(int productId)
    {
        Navigation.NavigateTo($"/products/{productId}");
    }
}
