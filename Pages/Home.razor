@page "/"
@layout CustomerLayout
@using BlazorApp.Services
@using BlazorApp.Dto
@using Microsoft.JSInterop
@inject IAuthService AuthService
@inject IProductService ProductService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Trang chủ - Store Manager</PageTitle>

<div class="container my-5" style="max-width: 1200px;">
    <!-- Hero Section - Bootstrap Carousel -->
    <section class="mb-5">
        <div id="heroCarousel" class="carousel slide rounded-4 shadow-lg overflow-hidden" data-bs-ride="carousel" data-bs-interval="4000" data-bs-wrap="true">
            <!-- Carousel Indicators -->
            <div class="carousel-indicators mb-3">
                <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active rounded-pill" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" class="rounded-pill" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" class="rounded-pill" aria-label="Slide 3"></button>
            </div>

            <!-- Carousel Items -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/banner/banner_1.png" class="d-block w-100 carousel-img" alt="Banner 1">
                    <div class="carousel-caption d-flex flex-column align-items-start justify-content-end">
                        <a href="/products" class="btn btn-success btn-lg px-4 py-2 rounded-pill fw-bold shadow-lg">
                            <i class="bi bi-shop me-2"></i>
                            Mua sắm ngay
                        </a>
                    </div>
                </div>
                
                <div class="carousel-item">
                    <img src="/banner/banner_2.png" class="d-block w-100 carousel-img" alt="Banner 2">
                    <div class="carousel-caption d-flex flex-column align-items-start justify-content-end">
                        <a href="/products" class="btn btn-warning btn-lg px-4 py-2 rounded-pill fw-bold shadow-lg text-white">
                            <i class="bi bi-fire me-2"></i>
                            Khám phá ngay
                        </a>
                    </div>
                </div>
                
                <div class="carousel-item">
                    <img src="/banner/banner_3.png" class="d-block w-100 carousel-img" alt="Banner 3">
                    <div class="carousel-caption d-flex flex-column align-items-start justify-content-end">
                        <a href="/products" class="btn btn-info btn-lg px-4 py-2 rounded-pill fw-bold shadow-lg text-white">
                            <i class="bi bi-stars me-2"></i>
                            Xem sản phẩm
                        </a>
                    </div>
                </div>
            </div>

            <!-- Carousel Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
        <h2 class="text-center fw-bold mb-2 section-title christmas-title">
            🎅 Ưu đãi Giáng Sinh đặc biệt 🎄
        </h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm rounded-4 h-100 feature-card-hover christmas-card">
                    <div class="card-body text-center p-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-4" 
                             style="width: 80px; height: 80px; background: linear-gradient(135deg, #c41e3a 0%, #a01729 100%);">
                            <span style="font-size: 2.5rem;">🎁</span>
                        </div>
                        <h5 class="fw-bold text-christmas-red mb-3">Quà tặng đặc biệt</h5>
                        <p class="text-muted mb-0">Tặng quà Giáng Sinh cho mọi đơn hàng, giao nhanh trong ngày lễ</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm rounded-4 h-100 feature-card-hover christmas-card">
                    <div class="card-body text-center p-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-4" 
                             style="width: 80px; height: 80px; background: linear-gradient(135deg, #165b33 0%, #0d3d22 100%);">
                            <span style="font-size: 2.5rem;">⭐</span>
                        </div>
                        <h5 class="fw-bold text-christmas-green mb-3">Ưu đãi mùa lễ</h5>
                        <p class="text-muted mb-0">Giảm giá đến 50% cho sản phẩm chọn lọc dịp Giáng Sinh</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm rounded-4 h-100 feature-card-hover christmas-card">
                    <div class="card-body text-center p-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-4" 
                             style="width: 80px; height: 80px; background: linear-gradient(135deg, #FFD700 0%, #DAA520 100%);">
                            <span style="font-size: 2.5rem;">🔔</span>
                        </div>
                        <h5 class="fw-bold text-christmas-gold mb-3">Tích điểm nhân đôi</h5>
                        <p class="text-muted mb-0">Tích điểm thưởng gấp đôi cho mỗi giao dịch dịp lễ</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Products by Category Section -->
    @if (!isLoading && categories.Any())
    {
        <section class="py-5">
            @foreach (var category in categories.Take(3))
            {
                var categoryProducts = products.Where(p => p.CategoryId == category.CategoryId && !p.Deleted).Take(4).ToList();
                @if (categoryProducts.Any())
                {
                    <div class="mb-5">
                        <div class="d-flex justify-content-between align-items-center mb-4 category-header">
                            <h4 class="fw-bold text-dark mb-0 d-flex align-items-center">
                                <span class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    <i class="bi bi-tag-fill"></i>
                                </span>
                                @category.CategoryName
                            </h4>
                            <a href="/products" class="btn btn-outline-success rounded-pill px-4">
                                Xem tất cả
                                <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
                            @foreach (var product in categoryProducts)
                            {
                                <div class="col">
                                    <div class="card border-0 shadow-sm rounded-4 h-100 product-card-hover" @onclick="() => ViewProduct(product.ProductId)" style="cursor: pointer;">
                                        <div class="position-relative overflow-hidden rounded-top-4" style="height: 200px; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                                            {
                                                <img src="@product.ImageUrl" alt="@product.ProductName" class="w-100 h-100" style="object-fit: cover; transition: transform 0.3s ease;" />
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center justify-content-center h-100">
                                                    <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                                                </div>
                                            }
                                            @if (product.IsInStock)
                                            {
                                                <span class="badge bg-success position-absolute top-0 end-0 m-3 px-3 py-2 rounded-pill">
                                                    <i class="bi bi-check-circle me-1"></i>Còn hàng
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger position-absolute top-0 end-0 m-3 px-3 py-2 rounded-pill">
                                                    <i class="bi bi-x-circle me-1"></i>Hết hàng
                                                </span>
                                            }
                                        </div>
                                        <div class="card-body p-3">
                                            <h6 class="fw-semibold text-dark mb-2 text-truncate-2" title="@product.ProductName">@product.ProductName</h6>
                                            <div class="d-flex align-items-center justify-content-between mt-auto">
                                                <div class="text-success fw-bold fs-5">@product.Price.ToString("N0") <small class="text-muted fw-normal">đ</small></div>
                                            </div>
                                            <button class="btn btn-outline-success btn-sm w-100 mt-3 view-detail-btn rounded-pill">
                                                <span>Xem chi tiết</span>
                                                <i class="bi bi-arrow-right ms-2"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </section>
    }
    else if (isLoading)
    {
        <section class="py-5 text-center">
            <div class="spinner-border text-success" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Đang tải...</span>
            </div>
            <p class="text-muted mt-3">Đang tải sản phẩm...</p>
        </section>
    }
</div>

<style>
    /* Carousel Styles */
    .carousel-img {
        height: 500px;
        object-fit: fill;
        transition: transform 0.5s ease;
    }
    
    #heroCarousel {
        border-radius: 20px;
        width: 100%;
    }
    
    #heroCarousel .carousel-inner,
    #heroCarousel .carousel-item {
        width: 100%;
    }
    
    #heroCarousel .carousel-caption {
        bottom: 30px;
        left: 5%;
        right: auto;
        text-align: left;
        padding: 20px;
        max-width: 400px;
    }
    
    #heroCarousel .carousel-control-prev,
    #heroCarousel .carousel-control-next {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #c41e3a 0%, #a01729 100%);
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
        opacity: 1;
        transition: all 0.3s ease;
        margin: 0 15px;
        border: 2px solid #FFD700;
    }
    
    #heroCarousel .carousel-control-prev:hover,
    #heroCarousel .carousel-control-next:hover {
        background: linear-gradient(135deg, #a01729 0%, #801422 100%);
        transform: translateY(-50%) scale(1.1);
        box-shadow: 0 0 20px rgba(255, 215, 0, 0.6);
    }
    
    #heroCarousel .carousel-indicators {
        bottom: 15px;
    }
    
    #heroCarousel .carousel-indicators button {
        width: 40px;
        height: 6px;
        border-radius: 10px;
        background-color: rgba(255, 255, 255, 0.5);
        border: none;
        margin: 0 5px;
        transition: all 0.3s ease;
    }
    
    #heroCarousel .carousel-indicators button.active {
        background: #2ecc71;
        width: 50px;
        box-shadow: 0 0 10px rgba(46, 204, 113, 0.8);
    }
    
    /* Feature Cards */
    .feature-card-hover {
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .feature-card-hover:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 15px 35px rgba(46, 204, 113, 0.25) !important;
        border-color: #2ecc71;
    }
    
    /* Product Cards */
    .product-card-hover {
        transition: all 0.3s ease;
        border: 2px solid transparent;
        position: relative;
    }

    .product-card-hover:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgba(46, 204, 113, 0.25) !important;
        border-color: #2ecc71;
    }

    .view-detail-btn {
        transition: all 0.3s ease;
    }

    .product-card-hover:hover .view-detail-btn {
        background: #2ecc71;
        border-color: #2ecc71;
        color: white;
    }

    .view-detail-btn i {
        transition: transform 0.3s ease;
    }

    .product-card-hover:hover .view-detail-btn i {
        transform: translateX(5px);
    }
    
    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 2.8em;
    }

    /* Button Styles */
    .btn-success {
        background: #2ecc71;
        border: none;
        transition: all 0.3s ease;
        color: white;
    }

    .btn-success:hover {
        background: #27ae60;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(46, 204, 113, 0.4) !important;
        color: white;
    }

    .btn-outline-success {
        border: 2px solid #2ecc71;
        color: #2ecc71;
    }

    .btn-outline-success:hover {
        background: #2ecc71;
        color: white;
        border-color: #2ecc71;
    }
    
    .btn-warning {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        border: none;
    }
    
    .btn-info {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        border: none;
    }
    
    /* Section Title */
    .section-title {
        position: relative;
        display: inline-block;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: #2ecc71;
        border-radius: 2px;
    }

    .bg-success {
        background: #2ecc71 !important;
    }
    
    /* Category Header */
    .category-header {
        padding-bottom: 15px;
        border-bottom: 2px solid #e9ecef;
    }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .carousel-img {
            height: 300px !important;
        }
        
        #heroCarousel .carousel-caption {
            max-width: 80%;
            padding: 15px;
            bottom: 15px;
        }
        
        #heroCarousel .carousel-control-prev,
        #heroCarousel .carousel-control-next {
            width: 40px;
            height: 40px;
            margin: 0 10px;
        }
    }
    
    @@media (max-width: 576px) {
        .carousel-img {
            height: 250px !important;
        }
    }
</style>

@code {
    private List<ProductDto> products = new();
    private List<CategoryDto> categories = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await InitializeCarousel();
        }
    }

    private async Task InitializeCarousel()
    {
        try
        {
            // Đợi một chút để DOM được render hoàn toàn
            await Task.Delay(100);
            await JSRuntime.InvokeVoidAsync("eval", @"
                (function() {
                    var carouselEl = document.getElementById('heroCarousel');
                    if (carouselEl && typeof bootstrap !== 'undefined') {
                        var existingCarousel = bootstrap.Carousel.getInstance(carouselEl);
                        if (existingCarousel) {
                            existingCarousel.dispose();
                        }
                        var carousel = new bootstrap.Carousel(carouselEl, {
                            interval: 4000,
                            ride: 'carousel',
                            wrap: true,
                            touch: true
                        });
                        carousel.cycle();
                    }
                })();
            ");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing carousel: {ex.Message}");
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var allProducts = await ProductService.GetAllProductsAsync();
            products = allProducts.Where(p => !p.Deleted && p.IsInStock).ToList();
            categories = await ProductService.GetAllCategoriesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ViewProduct(int productId)
    {
        Navigation.NavigateTo($"/products/{productId}");
    }
}
