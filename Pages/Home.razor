@page "/"
@layout CustomerLayout
@using BlazorApp.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Trang chủ - Store Manager</PageTitle>

<div class="container my-5" style="max-width: 1200px;">
    <!-- Hero Section -->
    <section class="card border-1 shadow-sm rounded-4 mb-5">
        <div class="card-body text-center p-5">
            <div class="mb-4 hero-icon-animate">
                <i class="bi bi-house-heart-fill text-success" style="font-size: 4rem;"></i>
            </div>
            <h1 class="display-4 fw-bold text-dark mb-3">Chào mừng đến với Store Manager!</h1>
            <p class="lead text-muted mb-4">Khám phá các sản phẩm tuyệt vời của chúng tôi</p>
            <a href="/products" class="btn btn-success btn-lg px-5 py-3 rounded-4 fw-bold shadow">
                <i class="bi bi-shop me-2"></i>
                Mua sắm ngay
            </a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-4">
        <h2 class="text-center fw-bold text-dark mb-5">Tại sao chọn chúng tôi?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-1 shadow-sm rounded-4 h-100 feature-card-hover">
                    <div class="card-body text-center p-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                             style="width: 70px; height: 70px; background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);">
                            <i class="bi bi-lightning-charge-fill text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="fw-bold text-dark mb-3">Giao hàng nhanh</h5>
                        <p class="text-muted">Giao hàng trong 24h với đơn nội thành</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-1 shadow-sm rounded-4 h-100 feature-card-hover">
                    <div class="card-body text-center p-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                             style="width: 70px; height: 70px; background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);">
                            <i class="bi bi-shield-check text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="fw-bold text-dark mb-3">Bảo hành chính hãng</h5>
                        <p class="text-muted">Cam kết 100% hàng chính hãng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-1 shadow-sm rounded-4 h-100 feature-card-hover">
                    <div class="card-body text-center p-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                             style="width: 70px; height: 70px; background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);">
                            <i class="bi bi-headset text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="fw-bold text-dark mb-3">Hỗ trợ 24/7</h5>
                        <p class="text-muted">Đội ngũ hỗ trợ nhiệt tình</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .hero-icon-animate {
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    .feature-card-hover {
        transition: all 0.3s ease;
    }

    .feature-card-hover:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 24px rgba(46, 204, 113, 0.15) !important;
    }

    .btn-success {
        background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        border-color: #27ae60;
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
        transform: translateY(-3px);
        box-shadow: 0 8px 24px rgba(46, 204, 113, 0.4) !important;
    }
</style>

@code {
    @* protected override async Task OnInitializedAsync()
    {
        if (!await AuthService.IsAuthenticatedAsync())
        {
            Navigation.NavigateTo("/login", true);
            return;
        }
    } *@
}
