            position: relative;
            top: 0;
        }

        .main-image {
            height: 350px;
        }

        .product-title {
            font-size: 1.5rem;
        }

        .price {
            font-size: 2rem;
        }

        .action-buttons {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    [Parameter]
    public int ProductId { get; set; }

    private ProductDto? product;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadProduct();
    }

    private async Task LoadProduct()
    {
        isLoading = true;
        try
        {
            // TODO: Implement GetProductByIdAsync in ProductService
            // product = await ProductService.GetProductByIdAsync(ProductId);
            
            // Temporary: Get from all products list
            var products = await ProductService.GetAllProductsAsync();
            product = products.FirstOrDefault(p => p.ProductId == ProductId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading product: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

   private async Task HandleAddToCart()
{
    if (!await AuthService.IsAuthenticatedAsync())
    {
        Navigation.NavigateTo($"/login?returnUrl=/products/{ProductId}", true);
        return;
    }

    var currentUser = await AuthService.GetCurrentUserAsync();
    if (currentUser == null) return;

    int customerId = currentUser.CustomerId;

    var body = new { ProductId = ProductId, Quantity = 1 };
    await ApiService.PostAsync<object, object>($"api/cart/{customerId}/items", body);

    Navigation.NavigateTo("/cart");
}

private async Task HandleBuyNow()
{
    if (!await AuthService.IsAuthenticatedAsync())
    {
        Navigation.NavigateTo($"/login?returnUrl=/products/{ProductId}", true);
        return;
    }

    var currentUser = await AuthService.GetCurrentUserAsync();
    if (currentUser == null) return;

    int customerId = currentUser.CustomerId;

    var body = new { ProductId = ProductId, Quantity = 1 };
    await ApiService.PostAsync<object, object>($"api/cart/{customerId}/items", body);

    Navigation.NavigateTo("/checkout");
}


    private string GetProductCode(int productId)
    {
        return $"SP{productId:D6}";
    }
}