@page "/products/{productId:int}"
@layout CustomerLayout
@using BlazorApp.Services
@using BlazorApp.Dto
@inject IApiService ApiService
@inject IAuthService AuthService
@inject IProductService ProductService
@inject NavigationManager Navigation

<PageTitle>@(product?.ProductName ?? "Chi tiết sản phẩm") - Store Manager</PageTitle>

<div class="product-detail-container">
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-success" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Đang tải sản phẩm...</p>
        </div>
    }
    else if (product == null)
    {
        <div class="empty-state">
            <i class="bi bi-box-seam"></i>
            <h3>Không tìm thấy sản phẩm</h3>
            <a href="/products" class="btn btn-primary mt-3">
                <i class="bi bi-arrow-left me-2"></i>
                Quay lại danh sách
            </a>
        </div>
    }
    else
    {
        <div class="breadcrumb-nav">
            <a href="/">Trang chủ</a>
            <i class="bi bi-chevron-right"></i>
            <a href="/products">Sản phẩm</a>
            <i class="bi bi-chevron-right"></i>
            <span>@product.ProductName</span>
        </div>

        <div class="product-detail-content">
            <div class="product-images">
                <div class="main-image">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.ProductName" />
                    }
                    else
                    {
                        <div class="no-image">
                            <i class="bi bi-image"></i>
                        </div>
                    }
                </div>
            </div>

            <div class="product-details">
                <div class="category-badge">
                    <i class="bi bi-tag"></i>
                    @product.CategoryName
                </div>
                
                <h1 class="product-title">@product.ProductName</h1>
                
                <div class="product-price-section">
                    <span class="price">@product.Price.ToString("N0") đ</span>
                </div>

                @if (!string.IsNullOrEmpty(product.Description))
                {
                    <div class="product-description">
                        <h3>Mô tả sản phẩm</h3>
                        <p>@product.Description</p>
                    </div>
                }

                <div class="product-meta">
                    <div class="meta-item">
                        <i class="bi bi-box"></i>
                        <span>Mã sản phẩm: @GetProductCode(product.ProductId)</span>
                    </div>
                    @if (!string.IsNullOrEmpty(product.Barcode))
                    {
                        <div class="meta-item">
                            <i class="bi bi-upc-scan"></i>
                            <span>Mã vạch: @product.Barcode</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(product.Unit))
                    {
                        <div class="meta-item">
                            <i class="bi bi-box-seam"></i>
                            <span>Đơn vị: @product.Unit</span>
                        </div>
                    }
                    @if (product.Supplier != null)
                    {
                        <div class="meta-item">
                            <i class="bi bi-building"></i>
                            <span>Nhà cung cấp: @product.Supplier.Name</span>
                        </div>
                    }
                    <div class="meta-item">
                        <i class="bi @(product.IsInStock ? "bi-check-circle text-success" : "bi-x-circle text-danger")"></i>
                        <span class="@(product.IsInStock ? "text-success" : "text-danger") fw-bold">@product.StockStatus</span>
                    </div>
                </div>

                <div class="action-buttons">
                    <button class="btn-add-to-cart" @onclick="HandleAddToCart" disabled="@(!product.IsInStock)">
                        <i class="bi bi-cart-plus me-2"></i>
                        Thêm vào giỏ hàng
                    </button>
                    <button class="btn-buy-now" @onclick="HandleBuyNow" disabled="@(!product.IsInStock)">
                        <i class="bi bi-lightning-fill me-2"></i>
                        Mua ngay
                    </button>
                </div>
            </div>
        </div>
    }
</div>

