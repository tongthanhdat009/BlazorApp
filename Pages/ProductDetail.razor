@page "/products/{productId:int}"
@layout CustomerLayout
@using BlazorApp.Services
@using BlazorApp.Dto
@inject IApiService ApiService
@inject IAuthService AuthService
@inject IProductService ProductService
@inject NavigationManager Navigation

<PageTitle>@(product?.ProductName ?? "Chi tiết sản phẩm") - Store Manager</PageTitle>

<div class="container my-4" style="max-width: 1200px;">
    @if (isLoading)
    {
        <div class="card border-1 shadow-sm rounded-4 text-center p-5">
            <div class="spinner-border text-success" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Đang tải sản phẩm...</p>
        </div>
    }
    else if (product == null)
    {
        <div class="card border-1 shadow-sm rounded-4 text-center p-5">
            <i class="bi bi-box-seam text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3">Không tìm thấy sản phẩm</h3>
            <a href="/products" class="btn btn-success mt-3 px-4">
                <i class="bi bi-arrow-left me-2"></i>
                Quay lại danh sách
            </a>
        </div>
    }
    else
    {
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/products" class="text-decoration-none text-success">Sản phẩm</a></li>
                <li class="breadcrumb-item active text-dark fw-semibold" aria-current="page">@product.ProductName</li>
            </ol>
        </nav>

        <div class="card border-1 shadow-sm rounded-4 overflow-hidden">
            <div class="card-body p-4">
                <div class="row g-4">
                    <!-- Product Images -->
                    <div class="col-lg-6">
                        <div class="sticky-top z-2" style="top: 2rem;">
                            <div class="rounded-4 overflow-hidden" style="height: 500px; background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="@product.ProductName" class="w-100 h-100" style="object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Product Details -->
                    <div class="col-lg-6">
                        <div class="d-flex flex-column gap-3">
                            <!-- Category Badge -->
                            <div>
                                <span class="badge rounded-pill px-3 py-2" style="background-color: #e8f5e9; color: #2ecc71;">
                                    <i class="bi bi-tag me-1"></i>
                                    @product.CategoryName
                                </span>
                            </div>
                            
                            <!-- Product Name -->
                            <h1 class="display-6 fw-bold text-dark">@product.ProductName</h1>
                            
                            <!-- Price -->
                            <div class="py-3 border-top border-bottom">
                                <h2 class="text-success fw-bold mb-0" style="font-size: 2.5rem;">@product.Price.ToString("N0") đ</h2>
                            </div>

                            <!-- Description -->
                            @if (!string.IsNullOrEmpty(product.Description))
                            {
                                <div>
                                    <h5 class="fw-bold text-dark mb-3">Mô tả sản phẩm</h5>
                                    <p class="text-muted lh-lg">@product.Description</p>
                                </div>
                            }

                            <!-- Product Meta -->
                            <div class="card bg-light border-1 rounded-3">
                                <div class="card-body p-3">
                                    <div class="d-flex flex-column gap-3">
                                        <div class="d-flex align-items-center gap-3">
                                            <i class="bi bi-box text-success fs-5"></i>
                                            <span class="text-dark">Mã sản phẩm: <strong>@GetProductCode(product.ProductId)</strong></span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(product.Barcode))
                                        {
                                            <div class="d-flex align-items-center gap-3">
                                                <i class="bi bi-upc-scan text-success fs-5"></i>
                                                <span class="text-dark">Mã vạch: <strong>@product.Barcode</strong></span>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(product.Unit))
                                        {
                                            <div class="d-flex align-items-center gap-3">
                                                <i class="bi bi-box-seam text-success fs-5"></i>
                                                <span class="text-dark">Đơn vị: <strong>@product.Unit</strong></span>
                                            </div>
                                        }
                                        @if (product.Supplier != null)
                                        {
                                            <div class="d-flex align-items-center gap-3">
                                                <i class="bi bi-building text-success fs-5"></i>
                                                <span class="text-dark">Nhà cung cấp: <strong>@product.Supplier.Name</strong></span>
                                            </div>
                                        }
                                        <div class="d-flex align-items-center gap-3">
                                            <i class="bi @(product.IsInStock ? "bi-check-circle text-success" : "bi-x-circle text-danger") fs-5"></i>
                                            <span class="@(product.IsInStock ? "text-success" : "text-danger") fw-bold">@product.StockStatus</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            @if (product.IsInStock)
                            {
                                <div class="row g-2 mt-2">
                                    <div class="col-md-6">
                                        <button class="btn btn-outline-success btn-lg w-100 rounded-3 fw-semibold" @onclick="HandleAddToCart">
                                            <i class="bi bi-cart-plus me-2"></i>
                                            Thêm vào giỏ hàng
                                        </button>
                                    </div>
                                    <div class="col-md-6">
                                        <button class="btn btn-success btn-lg w-100 rounded-3 fw-semibold" @onclick="HandleBuyNow">
                                            <i class="bi bi-lightning-fill me-2"></i>
                                            Mua ngay
                                        </button>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger border-1 shadow-sm d-flex align-items-center" role="alert">
                                    <i class="bi bi-exclamation-circle me-2 fs-4"></i>
                                    <strong>Sản phẩm hiện đang hết hàng</strong>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Breadcrumb hover effect */
    .breadcrumb-item a:hover {
        color: #2ecc71 !important;
    }

    /* Button hover effects */
    .btn-outline-success:hover,
    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(46, 204, 113, 0.3);
    }

    .btn-success {
        background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        border-color: #27ae60;
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
    }

    .btn-outline-success {
        color: #2ecc71;
        border-color: #2ecc71;
    }

    .btn-outline-success:hover {
        background-color: #2ecc71;
        border-color: #2ecc71;
    }

    .text-success {
        color: #2ecc71 !important;
    }
</style>

@code {
    [Parameter]
    public int ProductId { get; set; }

    private ProductDto? product;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadProduct();
    }

    private async Task LoadProduct()
    {
        isLoading = true;
        try
        {
            // TODO: Implement GetProductByIdAsync in ProductService
            // product = await ProductService.GetProductByIdAsync(ProductId);
            
            // Temporary: Get from all products list
            var products = await ProductService.GetAllProductsAsync();
            product = products.FirstOrDefault(p => p.ProductId == ProductId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading product: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

   private async Task HandleAddToCart()
{
    if (!await AuthService.IsAuthenticatedAsync())
    {
        Navigation.NavigateTo($"/login?returnUrl=/products/{ProductId}", true);
        return;
    }

    var currentUser = await AuthService.GetCurrentUserAsync();
    if (currentUser == null) return;

    int customerId = currentUser.CustomerId;

    var body = new { ProductId = ProductId, Quantity = 1 };
    await ApiService.PostAsync<object, object>($"api/cart/{customerId}/items", body);

    Navigation.NavigateTo("/cart");
}

private async Task HandleBuyNow()
{
    if (!await AuthService.IsAuthenticatedAsync())
    {
        Navigation.NavigateTo($"/login?returnUrl=/products/{ProductId}", true);
        return;
    }

    var currentUser = await AuthService.GetCurrentUserAsync();
    if (currentUser == null) return;

    int customerId = currentUser.CustomerId;

    var body = new { ProductId = ProductId, Quantity = 1 };
    await ApiService.PostAsync<object, object>($"api/cart/{customerId}/items", body);

    Navigation.NavigateTo("/checkout");
}


    private string GetProductCode(int productId)
    {
        return $"SP{productId:D6}";
    }
}