        padding:4px 8px; 
        border-radius:999px; 
        font-size:12px; 
        font-weight:700; 
        text-transform:uppercase; 
    }

    .badge.pending { 
        background:#fff7ed; 
        color:#b45309; 
    }

    .badge.approved { 
        background:#dbeafe; 
        color:#1e40af; 
    }

    .badge.processing { 
        background:#fef3c7; 
        color:#92400e; 
    }

    .badge.shipping { 
        background:#e0e7ff; 
        color:#4338ca; 
    }

    .badge.delivered { 
        background:#dcfce7; 
        color:#166534; 
    }

    .badge.completed,
    .badge.paid { 
        background:#e6fffa; 
        color:#0f766e; 
    }

    .badge.canceled { 
        background:#fee2e2; 
        color:#b91c1c; 
    }


