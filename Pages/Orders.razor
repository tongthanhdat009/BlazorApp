    {
        ShowConfirm = false;
        CancelError = null;
        CancelSuccess = null;
    }

    public void OpenConfirm(OrderDto order)
    {
        selectedOrder = order;
        CancelError = null;
        CancelSuccess = null;
        ShowConfirm = true;
    }
