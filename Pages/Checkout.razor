@page "/checkout"
@layout CustomerLayout
@using BlazorApp.Dto
@using BlazorApp.Services
@inject IOrderService OrderService
@inject IPromotionService PromotionService
@inject IPaymentService PaymentService
@inject ICartService CartService
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject HttpClient Http

<PageTitle>Thanh toán</PageTitle>

<div class="checkout-container">
    <h2>Thanh toán đơn hàng</h2>

    @if (isLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-success" role="status"></div>
        </div>
    }
    else if (order == null)
    {
        <div class="alert alert-warning">
            Giỏ hàng trống hoặc không thể tạo đơn hàng.
        </div>
        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-danger mt-2">@message</div>
        }
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Hình</th>
                    <th>Sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Tạm tính</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in order.OrderItems)
                {
                    <tr>
                        <td>
                            <img src="@(!string.IsNullOrEmpty(item.ProductName) ? $"/images/{item.ProductName}.png" : "/images/no-image.png")"
                                 width="80" class="rounded" />
                        </td>
                        <td>@item.ProductName</td>
                        <td>@item.Price.ToString("N0") đ</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Subtotal != 0 ? item.Subtotal.ToString("N0") : (item.Price * item.Quantity).ToString("N0")) đ</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <label>Nhập mã khuyến mãi:</label>
            <div class="d-flex">
                <input class="form-control me-2" @bind="promoCode" placeholder="Nhập mã promo" />
                <button class="btn btn-primary me-2" @onclick="ApplyPromo" disabled="@isApplyingPromo">
                    @if (isApplyingPromo)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Đang áp dụng...</span>
                    }
                    else
                    {
                        <span>Áp dụng</span>
                    }
                </button>
                <button class="btn btn-outline-secondary" @onclick="RemovePromo"  disabled="@(isApplyingPromo || discountAmount == 0)">
                    Hủy áp dụng
                </button>
            </div>
            @if (discountAmount > 0)
            {
                <div class="mt-2">Giảm: @discountAmount.ToString("N0") đ</div>
            }
        </div>

        <div class="text-end mt-3">
            <h3>Tổng cần thanh toán: @finalAmount.ToString("N0") đ</h3>
        </div>

        <div class="mt-4">
            <label>Chọn phương thức thanh toán:</label>
            <select class="form-select" @bind="paymentMethod">
                <option value="cash">Tiền mặt</option>
                <option value="e-wallet">Ví điện tử</option>
            </select>
        </div>

        <div class="mt-3 d-flex gap-2 justify-content-end">
            <button class="btn btn-secondary" @onclick="CancelCheckout" disabled="@isPaying">Hủy</button>
            <button class="btn btn-success btn-lg" @onclick="PayOrder" disabled="@isPaying">
                @if (isPaying)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>Đang xử lý...</span>
                }
                else
                {
                    <span>Thanh toán</span>
                }
            </button>
        </div>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-info mt-3">@message</div>
        }
    }
</div>

@code {
    private OrderDto? order;
    private bool isLoading = true;
    private bool isPaying = false;
    private bool isApplyingPromo = false;
    private string paymentMethod = "cash";
    private string message = "";

    private string promoCode = "";
    private int? appliedPromoId = null;
    private decimal discountAmount = 0;

    private decimal finalAmount => (order?.TotalAmount ?? 0) - discountAmount;

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        if (user == null)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        await LoadOrderFromCart();
    }

    private async Task LoadOrderFromCart()
    {
        isLoading = true;
        try
        {
            var request = new CreateOrderFromCartRequest
            {
                PaymentMethod = paymentMethod,
                PromoId = appliedPromoId,
                PromoCode = promoCode,
                DiscountAmount = discountAmount
            };

            // Use preview to avoid creating/persisting order and clearing cart
            order = await OrderService.PreviewOrderFromCartAsync(request);

            // Cập nhật thông tin promo/discount theo preview trả về
            if (order != null)
            {
                appliedPromoId = order.PromoId;
                discountAmount = order.DiscountAmount;
            }
        }
        catch (Exception ex)
        {
            message = $"Không thể tạo đơn hàng: {ex.Message}";
            order = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ApplyPromo()
    {
        if (string.IsNullOrWhiteSpace(promoCode))
        {
            message = "Vui lòng nhập mã khuyến mãi";
            return;
        }

        isApplyingPromo = true;
        message = "";

        try
        {
            // ensure we have the current order total
            if (order == null)
            {
                await LoadOrderFromCart();
            }

            var orderTotal = order?.TotalAmount ?? 0m;
            var result = await PromotionService.ApplyPromoCodeAsync(promoCode, orderTotal);
            if (result != null)
            {
                appliedPromoId = result.PromoId;
                discountAmount = result.DiscountAmount;
                message = $"Áp dụng thành công! Giảm {discountAmount:N0} đ";

                // Reload preview with PromoId mới
                await LoadOrderFromCart();
            }
            else
            {
                appliedPromoId = null;
                discountAmount = 0;
                message = "Mã promo không hợp lệ hoặc hết hạn";
            }
        }
        catch (Exception ex)
        {
            message = $"Lỗi khi áp dụng promo: {ex.Message}";
        }
        finally
        {
            isApplyingPromo = false;
        }
    }

    private async Task PayOrder()
    {
        if (order == null) return;

        isPaying = true;
        message = "";

        try
        {
            // Perform checkout: this will create order, payment, bill and clear the cart on backend
            var request = new CreateOrderFromCartRequest
            {
                PaymentMethod = paymentMethod,
                PromoId = appliedPromoId
            };

            try
            {
                var createdOrder = await OrderService.CheckoutFromCartAsync(request);
                if (createdOrder != null)
                {
                    message = $"Thanh toán thành công! Mã Order: {createdOrder.OrderId}";
                    // update local order to reflect created order
                    order = createdOrder;
                }
                else
                {
                    message = "Thanh toán thất bại!";
                }
            }
            catch (Exception ex)
            {
                message = $"Lỗi khi thanh toán: {ex.Message}";
            }
        }
        catch (Exception ex)
        {
            message = $"Lỗi khi thanh toán: {ex.Message}";
        }
        finally
        {
            isPaying = false;
        }
    }

    private async Task RemovePromo()
    {
        isApplyingPromo = true;
        try
        {
            promoCode = string.Empty;     // Clear input
            appliedPromoId = null;        // Clear promo
            discountAmount = 0;           // Reset discount
            message = "Đã hủy áp dụng mã khuyến mãi.";

            // Tải lại order preview để cập nhật lại TotalAmount không giảm giá
            await LoadOrderFromCart();
        }
        catch (Exception ex)
        {
            message = $"Lỗi khi hủy promo: {ex.Message}";
        }
        finally
        {
            isApplyingPromo = false;
        }
    }


    private void CancelCheckout()
    {
        // Just reset UI state and go back to cart page
        Navigation.NavigateTo("/cart");
    }
}
