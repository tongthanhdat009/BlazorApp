@code {
    [SupplyParameterFromQuery(Name = "items")]
    public string? SelectedItemsParam { get; set; }
    
    private OrderDto? order;
    private bool isLoading = true;
    private bool isPaying = false;
    private bool isApplyingPromo = false;
    private string paymentMethod = "cash";
    private string message = "";
    private Dictionary<int, string> productImageUrls = new();
    private ValidateCheckoutResponse? validationResponse = null;
    private List<int> selectedProductIds = new();

    private string promoCode = "";
    private int? appliedPromoId = null;
    private decimal discountAmount = 0;

    // Customer information fields
    private string customerName = "";
    private string customerPhone = "";
    private string customerEmail = "";
    private string customerAddress = "";
    private bool useLoggedInUserInfo = false;
    private bool showValidation = false;
    private CustomerInfo? currentUser;

    private decimal finalAmount => (order?.TotalAmount ?? 0) - discountAmount;

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        if (user == null)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        currentUser = user;
        
        // Parse selected product IDs from query parameter
        if (!string.IsNullOrEmpty(SelectedItemsParam))
        {
            selectedProductIds = SelectedItemsParam
                .Split(',', StringSplitOptions.RemoveEmptyEntries)
                .Select(s => int.TryParse(s, out int id) ? id : 0)
                .Where(id => id > 0)
                .ToList();
        }
        
        await LoadOrderFromCart();
    }

    private void OnUseUserInfoChanged()
    {
        if (useLoggedInUserInfo && currentUser != null)
        {
            customerName = currentUser.Name ?? "";
            customerPhone = currentUser.Phone ?? "";
            customerEmail = currentUser.Email ?? "";
            customerAddress = currentUser.Address ?? "";
        }
        else
        {
            customerName = "";
            customerPhone = "";
            customerEmail = "";
            customerAddress = "";
        }
        showValidation = false;
    }

    private bool ValidateCustomerInfo()
    {
        showValidation = true;
        
        if (string.IsNullOrWhiteSpace(customerName) ||
            string.IsNullOrWhiteSpace(customerPhone) ||
            string.IsNullOrWhiteSpace(customerEmail) ||
            string.IsNullOrWhiteSpace(customerAddress))
        {
            message = "Vui l√≤ng ƒëi·ªÅn ƒë·∫ßy ƒë·ªß th√¥ng tin ng∆∞·ªùi mua!";
            return false;
        }

        return true;
    }

    private async Task LoadOrderFromCart()
    {
        isLoading = true;
        try
        {
            var request = new CreateOrderFromCartRequest
            {
                PaymentMethod = paymentMethod,
                PromoId = appliedPromoId,
                PromoCode = promoCode,
                DiscountAmount = discountAmount,
                SelectedProductIds = selectedProductIds.Any() ? selectedProductIds : null
            };

            // Use preview to avoid creating/persisting order and clearing cart
            order = await OrderService.PreviewOrderFromCartAsync(request);

            // Filter order items to only include selected products if specified
            if (order != null && selectedProductIds.Any())
            {
                order.OrderItems = order.OrderItems
                    .Where(item => selectedProductIds.Contains(item.ProductId))
                    .ToList();
                
                // Recalculate total for selected items only
                order.TotalAmount = order.OrderItems.Sum(item => item.Subtotal);
            }

            // C·∫≠p nh·∫≠t th√¥ng tin promo/discount theo preview tr·∫£ v·ªÅ
            if (order != null)
            {
                appliedPromoId = order.PromoId;
                discountAmount = order.DiscountAmount;
                
                // Preload S3 image URLs for order items
                productImageUrls.Clear();
                foreach (var item in order.OrderItems)
                {
                    // OrderItemDto has Product.ImageUrl
                    var imageKey = item.Product?.ImageUrl;
                    if (item.ProductId > 0 && !string.IsNullOrEmpty(imageKey))
                    {
                        var imageUrl = await S3ImageService.GetImageUrlAsync(imageKey);
                        productImageUrls[item.ProductId] = imageUrl;
                    }
                }
            }
        }
        catch (Exception ex)
        {
            message = $"Kh√¥ng th·ªÉ t·∫°o ƒë∆°n h√†ng: {ex.Message}";
            order = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ApplyPromo()
    {
        if (string.IsNullOrWhiteSpace(promoCode))
        {
            message = "Vui l√≤ng nh·∫≠p m√£ khuy·∫øn m√£i";
            return;
        }

        isApplyingPromo = true;
        message = "";

        try
        {
            // ensure we have the current order total
            if (order == null)
            {
                await LoadOrderFromCart();
            }

            var orderTotal = order?.TotalAmount ?? 0m;
            var result = await PromotionService.ApplyPromoCodeAsync(promoCode, orderTotal);
            if (result != null)
            {
                appliedPromoId = result.PromoId;
                discountAmount = result.DiscountAmount;
                message = $"√Åp d·ª•ng th√†nh c√¥ng! Gi·∫£m {discountAmount:N0} ƒë";

                // Reload preview with PromoId m·ªõi
                await LoadOrderFromCart();
            }
            else
            {
                appliedPromoId = null;
                discountAmount = 0;
                message = "M√£ promo kh√¥ng h·ª£p l·ªá ho·∫∑c h·∫øt h·∫°n";
            }
        }
        catch (Exception ex)
        {
            message = $"L·ªói khi √°p d·ª•ng promo: {ex.Message}";
        }
        finally
        {
            isApplyingPromo = false;
        }
    }

    private async Task PayOrder()
    {
        if (order == null) return;

        // Validate customer information first
        if (!ValidateCustomerInfo())
        {
            return;
        }

        isPaying = true;
        message = "";
        validationResponse = null;

        try
        {
            // Validate gi·ªè h√†ng tr∆∞·ªõc khi thanh to√°n
            var validationRequest = new ValidateCheckoutRequest
            {
                PromoCode = promoCode
            };

            validationResponse = await CartService.ValidateCheckoutAsync(validationRequest);
            
            if (validationResponse == null || !validationResponse.IsValid)
            {
                // Hi·ªÉn th·ªã l·ªói validation chi ti·∫øt qua validationResponse
                isPaying = false;
                return;
            }

            // N·∫øu ch·ªçn VNPay, t·∫°o URL thanh to√°n v√† redirect
            if (paymentMethod == "vnpay")
            {
                // T·∫°o ƒë∆°n h√†ng tr∆∞·ªõc
                var request = new CreateOrderFromCartRequest
                {
                    PaymentMethod = paymentMethod,
                    PromoId = appliedPromoId,
                    CustomerName = customerName,
                    CustomerPhone = customerPhone,
                    CustomerEmail = customerEmail,
                    CustomerAddress = customerAddress,
                    SelectedProductIds = selectedProductIds.Any() ? selectedProductIds : null
                };

                var createdOrder = await OrderService.CheckoutFromCartAsync(request);
                if (createdOrder != null)
                {
                    // T·∫°o URL thanh to√°n VNPay
                    // Kh√¥ng set ReturnUrl, ƒë·ªÉ backend d√πng config t·ª´ appsettings
                    var vnpayRequest = new VNPayRequestDto
                    {
                        OrderId = createdOrder.OrderId,
                        Amount = finalAmount,
                        OrderInfo = $"Thanh to√°n ƒë∆°n h√†ng #{createdOrder.OrderId}"
                    };

                    var vnpayResponse = await PaymentService.CreateVNPayPaymentAsync(vnpayRequest);
                    if (vnpayResponse != null && vnpayResponse.Success && !string.IsNullOrEmpty(vnpayResponse.PaymentUrl))
                    {
                        // Redirect ƒë·∫øn VNPay
                        Navigation.NavigateTo(vnpayResponse.PaymentUrl, true);
                    }
                    else
                    {
                        message = vnpayResponse?.Message ?? "Kh√¥ng th·ªÉ t·∫°o URL thanh to√°n VNPay";
                    }
                }
                else
                {
                    message = "Kh√¥ng th·ªÉ t·∫°o ƒë∆°n h√†ng!";
                }
            }
            else
            {
                // Perform checkout: this will create order, payment, bill and clear the cart on backend
                var request = new CreateOrderFromCartRequest
                {
                    PaymentMethod = paymentMethod,
                    PromoId = appliedPromoId,
                    CustomerName = customerName,
                    CustomerPhone = customerPhone,
                    CustomerEmail = customerEmail,
                    CustomerAddress = customerAddress,
                    SelectedProductIds = selectedProductIds.Any() ? selectedProductIds : null
                };

                try
                {
                    var createdOrder = await OrderService.CheckoutFromCartAsync(request);
                    if (createdOrder != null)
                    {
                        // Navigate to success page
                        Navigation.NavigateTo($"/payment-success/{createdOrder.OrderId}");
                    }
                    else
                    {
                        message = "Thanh to√°n th·∫•t b·∫°i!";
                    }
                }
                catch (Exception ex)
                {
                    message = $"L·ªói khi thanh to√°n: {ex.Message}";
                }
            }
        }
        catch (Exception ex)
        {
            message = $"L·ªói khi thanh to√°n: {ex.Message}";
        }
        finally
        {
            isPaying = false;
        }
    }

    private async Task RemovePromo()
    {
        isApplyingPromo = true;
        try
        {
            promoCode = string.Empty;     // Clear input
            appliedPromoId = null;        // Clear promo
            discountAmount = 0;           // Reset discount
            message = "ƒê√£ h·ªßy √°p d·ª•ng m√£ khuy·∫øn m√£i.";

            // T·∫£i l·∫°i order preview ƒë·ªÉ c·∫≠p nh·∫≠t l·∫°i TotalAmount kh√¥ng gi·∫£m gi√°
            await LoadOrderFromCart();
        }
        catch (Exception ex)
        {
            message = $"L·ªói khi h·ªßy promo: {ex.Message}";
        }
        finally
        {
            isApplyingPromo = false;
        }
