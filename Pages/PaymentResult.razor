@page "/payment-result"
@layout CustomerLayout
@inject NavigationManager Navigation

<PageTitle>Kết quả thanh toán</PageTitle>

<div class="container my-5" style="max-width: 800px;">
    <div class="card border-0 shadow-lg rounded-4">
        <div class="card-body p-5 text-center">
            @if (isSuccess)
            {
                <!-- Success Icon -->
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 80px;"></i>
                </div>

                <h2 class="fw-bold text-success mb-3">Thanh toán thành công!</h2>
                
                <div class="alert alert-success border-0 shadow-sm text-start">
                    <div class="row mb-2">
                        <div class="col-5 fw-bold">Mã đơn hàng:</div>
                        <div class="col-7">#@orderId</div>
                    </div>
                    @if (!string.IsNullOrEmpty(transactionId))
                    {
                        <div class="row mb-2">
                            <div class="col-5 fw-bold">Mã giao dịch:</div>
                            <div class="col-7">@transactionId</div>
                        </div>
                    }
                    @if (amount > 0)
                    {
                        <div class="row mb-2">
                            <div class="col-5 fw-bold">Số tiền:</div>
                            <div class="col-7 text-success fw-bold">@amount.ToString("N0") VNĐ</div>
                        </div>
                    }
                </div>

                <p class="text-muted mb-4">
                    @message
                </p>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button class="btn btn-success btn-lg px-4" @onclick="GoToOrders">
                        <i class="bi bi-list-ul me-2"></i>
                        Xem đơn hàng
                    </button>
                    <button class="btn btn-outline-secondary btn-lg px-4" @onclick="GoToHome">
                        <i class="bi bi-house me-2"></i>
                        Về trang chủ
                    </button>
                </div>
            }
            else
            {
                <!-- Error Icon -->
                <div class="mb-4">
                    <i class="bi bi-x-circle-fill text-danger" style="font-size: 80px;"></i>
                </div>

                <h2 class="fw-bold text-danger mb-3">Thanh toán thất bại!</h2>
                
                @if (!string.IsNullOrEmpty(orderId))
                {
                    <div class="alert alert-warning border-0 shadow-sm text-start">
                        <div class="row">
                            <div class="col-5 fw-bold">Mã đơn hàng:</div>
                            <div class="col-7">#@orderId</div>
                        </div>
                    </div>
                }

                <p class="text-muted mb-4">
                    @message
                </p>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button class="btn btn-danger btn-lg px-4" @onclick="RetryPayment">
                        <i class="bi bi-arrow-clockwise me-2"></i>
                        Thử lại
                    </button>
                    <button class="btn btn-outline-secondary btn-lg px-4" @onclick="GoToHome">
                        <i class="bi bi-house me-2"></i>
                        Về trang chủ
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool isSuccess = false;
    private string message = "";
    private string? orderId;
    private string? transactionId;
    private decimal amount = 0;

    protected override void OnInitialized()
    {
        var uri = new Uri(Navigation.Uri);
        var queryString = uri.Query;
        
        // Parse query parameters manually
        if (!string.IsNullOrEmpty(queryString))
        {
            var queryParams = System.Web.HttpUtility.ParseQueryString(queryString);
            
            var successValue = queryParams["success"];
            if (!string.IsNullOrEmpty(successValue))
            {
                isSuccess = successValue.ToLower() == "true";
            }

            var messageValue = queryParams["message"];
            if (!string.IsNullOrEmpty(messageValue))
            {
                message = messageValue;
            }

            var orderIdValue = queryParams["orderId"];
            if (!string.IsNullOrEmpty(orderIdValue))
            {
                orderId = orderIdValue;
            }

            var transactionIdValue = queryParams["transactionId"];
            if (!string.IsNullOrEmpty(transactionIdValue))
            {
                transactionId = transactionIdValue;
            }

            var amountValue = queryParams["amount"];
            if (!string.IsNullOrEmpty(amountValue))
            {
                decimal.TryParse(amountValue, out amount);
            }
        }

        // Default message if empty
        if (string.IsNullOrEmpty(message))
        {
            message = isSuccess 
                ? "Đơn hàng của bạn đã được thanh toán thành công qua VNPay." 
                : "Có lỗi xảy ra trong quá trình thanh toán. Vui lòng thử lại.";
        }
    }

    private void GoToOrders()
    {
        Navigation.NavigateTo("/orders");
    }

    private void GoToHome()
    {
        Navigation.NavigateTo("/");
    }

    private void RetryPayment()
    {
        if (!string.IsNullOrEmpty(orderId))
        {
            Navigation.NavigateTo($"/checkout?orderId={orderId}");
        }
        else
        {
            Navigation.NavigateTo("/cart");
        }
    }
}
