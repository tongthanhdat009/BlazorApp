@page "/products"
@layout CustomerLayout
@using BlazorApp.Services
@using BlazorApp.Dto
@inject IAuthService AuthService
@inject IProductService ProductService
@inject NavigationManager Navigation

<PageTitle>Sản phẩm - Store Manager</PageTitle>

<div class="container my-4" style="max-width: 1200px;">
    <!-- Header -->
    <div class="mb-4">
        <h1 class="fw-bold text-dark">
            <i class="bi bi-grid-3x3-gap-fill me-3 text-success"></i>
            Danh sách sản phẩm
        </h1>
        <p class="text-muted">Khám phá các sản phẩm chất lượng của chúng tôi</p>
    </div>

    <!-- Filters Section -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
            <!-- Search Box -->
            <div class="position-relative mb-4">
                <i class="bi bi-search position-absolute top-50 translate-middle-y ms-3 text-muted"></i>
                <input type="text" class="form-control form-control-lg ps-5 border-2 rounded-3"
                       placeholder="Tìm kiếm sản phẩm..." 
                       @bind="searchKeyword" 
                       @bind:event="oninput"
                       @onkeyup="OnSearchKeyup" />
            </div>
            <!-- Category Filters -->
            <div class="d-flex flex-wrap gap-2 mb-4">
                <button class="btn @(string.IsNullOrEmpty(selectedCategoryName) ? "btn-success" : "btn-outline-secondary") rounded-pill px-3" 
                        @onclick="() => FilterByCategory(null)">
                    Tất cả
                </button>
                @foreach (var category in categories)
                {
                    <button class="btn @(selectedCategoryName == category.CategoryName ? "btn-success" : "btn-outline-secondary") rounded-pill px-3" 
                            @onclick="() => FilterByCategory(category.CategoryName)">
                        @category.CategoryName
                    </button>
                }
            </div>

            <!-- Price Range Slider -->
            <div class="border-top pt-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <label class="fw-semibold text-dark mb-0">
                        <i class="bi bi-cash-stack me-2 text-success"></i>
                        Khoảng giá
                    </label>
                    @if (minPrice != globalMinPrice || maxPrice != globalMaxPrice)
                    {
                        <button class="btn btn-sm btn-outline-secondary rounded-pill" @onclick="ResetPriceFilter">
                            <i class="bi bi-x-circle me-1"></i>
                            Đặt lại
                        </button>
                    }
                </div>
                
                <div class="row g-3 align-items-center">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-currency-dollar text-success"></i>
                            </span>
                            <input type="number" class="form-control border-start-0" 
                                   placeholder="Tối thiểu"
                                   @bind="minPrice" 
                                   @bind:event="oninput"
                                   @onchange="OnPriceChanged"
                                   min="@globalMinPrice" 
                                   max="@maxPrice" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-currency-dollar text-success"></i>
                            </span>
                            <input type="number" class="form-control border-start-0" 
                                   placeholder="Tối đa"
                                   @bind="maxPrice" 
                                   @bind:event="oninput"
                                   @onchange="OnPriceChanged"
                                   min="@minPrice" 
                                   max="@globalMaxPrice" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-success w-100 rounded-3" @onclick="ApplyFilters">
                            <i class="bi bi-funnel me-2"></i>
                            Áp dụng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Page Size Selector -->
    <div class="card border-0 shadow-sm rounded-3 mb-4">
        <div class="card-body p-3 d-flex align-items-center gap-3">
            <label class="fw-semibold text-dark mb-0">Hiển thị:</label>
            <select class="form-select form-select-sm w-auto" @bind="pageSize" @bind:after="OnPageSizeChanged">
                <option value="12">12 sản phẩm</option>
                <option value="24">24 sản phẩm</option>
                <option value="36">36 sản phẩm</option>
                <option value="48">48 sản phẩm</option>
            </select>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="card border-0 shadow-sm rounded-4 text-center p-5">
            <div class="spinner-border text-success" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Đang tải sản phẩm...</p>
        </div>
    }
    else if (filteredProducts.Count == 0)
    {
        <div class="card border-0 shadow-sm rounded-4 text-center p-5">
            <i class="bi bi-box-seam text-muted" style="font-size: 4rem;"></i>
            <p class="text-muted mt-3">Không tìm thấy sản phẩm nào</p>
        </div>
    }
    else
    {
        <!-- Products Grid -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-4">
            @foreach (var product in paginatedProducts)
            {
                <div class="col">
                    <div class="card border-0 shadow-sm rounded-4 h-100 product-card-hover" @onclick="() => ViewProduct(product.ProductId)" style="cursor: pointer;">
                        <!-- Product Image -->
                        <div class="position-relative overflow-hidden rounded-top-4" style="height: 200px; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.ProductName" class="w-100 h-100" style="object-fit: cover; transition: transform 0.3s ease;" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100">
                                    <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                                </div>
                            }
                            @if (product.IsInStock)
                            {
                                <span class="badge bg-success position-absolute top-0 end-0 m-3 px-3 py-2 rounded-pill">
                                    <i class="bi bi-check-circle me-1"></i>Còn hàng
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-3 px-3 py-2 rounded-pill">
                                    <i class="bi bi-x-circle me-1"></i>Hết hàng
                                </span>
                            }
                        </div>
                        <!-- Product Info -->
                        <div class="card-body p-3">
                            <h6 class="fw-semibold text-dark mb-2 text-truncate-2" title="@product.ProductName">@product.ProductName</h6>
                            <div class="d-flex align-items-center justify-content-between mt-auto">
                                <div class="text-success fw-bold fs-5">@product.Price.ToString("N0") <small class="text-muted fw-normal">đ</small></div>
                            </div>
                            <button class="btn btn-outline-success btn-sm w-100 mt-3 view-detail-btn rounded-pill">
                                <span>Xem chi tiết</span>
                                <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <!-- Pagination -->
            <nav aria-label="Product pagination">
                <ul class="pagination justify-content-center gap-1 mb-3">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link rounded-2" @onclick="() => ChangePage(1)" disabled="@(currentPage == 1)">
                            <i class="bi bi-chevron-double-left"></i>
                        </button>
                    </li>
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link rounded-2" @onclick="() => ChangePage(currentPage - 1)" disabled="@(currentPage == 1)">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                    </li>

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        var pageNumber = i;
                        <li class="page-item @(currentPage == pageNumber ? "active" : "")">
                            <button class="page-link rounded-2" @onclick="() => ChangePage(pageNumber)">
                                @pageNumber
                            </button>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <button class="page-link rounded-2" @onclick="() => ChangePage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </li>
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <button class="page-link rounded-2" @onclick="() => ChangePage(totalPages)" disabled="@(currentPage == totalPages)">
                            <i class="bi bi-chevron-double-right"></i>
                        </button>
                    </li>
                </ul>
            </nav>

            <div class="text-center text-muted small">
                <span>Hiển thị @((currentPage - 1) * pageSize + 1) - @Math.Min(currentPage * pageSize, filteredProducts.Count) trong tổng số @filteredProducts.Count sản phẩm</span>
            </div>
        }
    }
</div>

<style>
    /* Text truncate for product names */
    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Product card hover effect */
    .product-card-hover {
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }

    .product-card-hover:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgba(46, 204, 113, 0.2) !important;
        border-color: #2ecc71;
    }

    /* View detail button hover */
    .view-detail-btn {
        transition: all 0.3s ease;
    }

    .product-card-hover:hover .view-detail-btn {
        background-color: #2ecc71;
        border-color: #2ecc71;
        color: white;
    }

    .view-detail-btn i {
        transition: transform 0.3s ease;
    }

    .product-card-hover:hover .view-detail-btn i {
        transform: translateX(5px);
    }

    /* Bootstrap overrides */
    .btn-success {
        background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        border-color: #27ae60;
    }

    .btn-success:hover,
    .btn-success:focus {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
        border-color: #229954;
    }

    .text-success {
        color: #2ecc71 !important;
    }

    .bg-success {
        background-color: #2ecc71 !important;
    }

    .page-link {
        color: #495057;
        border-color: #e9ecef;
    }

    .page-link:hover {
        color: #2ecc71;
        border-color: #2ecc71;
    }

    .page-item.active .page-link {
        background-color: #2ecc71;
        border-color: #27ae60;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #2ecc71;
        box-shadow: 0 0 0 0.25rem rgba(46, 204, 113, 0.15);
    }

    .input-group-text {
        background-color: #f8f9fa;
    }
</style>

@code {
    private List<ProductDto> products = new();
    private List<ProductDto> filteredProducts = new();
    private List<ProductDto> paginatedProducts = new();
    private List<CategoryDto> categories = new();
    private bool isLoading = true;
    private string searchKeyword = "";
    private string? selectedCategoryName = null;
    private System.Threading.Timer? searchTimer;
    
    // Price Range
    private decimal minPrice = 0;
    private decimal maxPrice = 10000000;
    private decimal globalMinPrice = 0;
    private decimal globalMaxPrice = 10000000;
    
    // Pagination
    private int currentPage = 1;
    private int pageSize = 12;
    private int totalPages => (int)Math.Ceiling(filteredProducts.Count / (double)pageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var allProducts = await ProductService.GetAllProductsAsync();
            // Filter out deleted products
            products = allProducts.Where(p => !p.Deleted).ToList();
            
            categories = await ProductService.GetAllCategoriesAsync();
            
            // Calculate global min/max prices from available products
            if (products.Any())
            {
                globalMinPrice = products.Min(p => p.Price);
                globalMaxPrice = products.Max(p => p.Price);
                minPrice = globalMinPrice;
                maxPrice = globalMaxPrice;
            }
            
            filteredProducts = products;
            UpdatePagination();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading products: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterByCategory(string? categoryName)
    {
        selectedCategoryName = categoryName;
        ApplyFilters();
    }

    private void OnSearchKeyup()
    {
        searchTimer?.Dispose();
        searchTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                ApplyFilters();
                StateHasChanged();
            });
        }, null, 300, Timeout.Infinite);
    }

    private void ApplyFilters()
    {
        filteredProducts = products;

        // Filter by category name
        if (!string.IsNullOrEmpty(selectedCategoryName))
        {
            filteredProducts = filteredProducts
                .Where(p => p.CategoryName == selectedCategoryName)
                .ToList();
        }

        // Filter by search keyword
        if (!string.IsNullOrWhiteSpace(searchKeyword))
        {
            var keyword = searchKeyword.ToLower();
            filteredProducts = filteredProducts
                .Where(p => p.ProductName.ToLower().Contains(keyword) ||
                           (p.CategoryName?.ToLower().Contains(keyword) ?? false))
                .ToList();
        }

        // Filter by price range
        filteredProducts = filteredProducts
            .Where(p => p.Price >= minPrice && p.Price <= maxPrice)
            .ToList();

        // Sort: In stock items first, then out of stock
        filteredProducts = filteredProducts
            .OrderByDescending(p => p.IsInStock)
            .ThenBy(p => p.ProductName)
            .ToList();

        // Reset to first page when filters change
        currentPage = 1;
        UpdatePagination();
    }

    private void OnPageSizeChanged()
    {
        currentPage = 1;
        UpdatePagination();
    }

    private void UpdatePagination()
    {
        paginatedProducts = filteredProducts
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();
    }

    private void ChangePage(int page)
    {
        if (page < 1 || page > totalPages) return;
        currentPage = page;
        UpdatePagination();
    }

    private void ViewProduct(int productId)
    {
        Navigation.NavigateTo($"/products/{productId}");
    }

    private void OnPriceChanged()
    {
        // Ensure min is not greater than max
        if (minPrice > maxPrice)
        {
            minPrice = maxPrice;
        }
        StateHasChanged();
    }

    private void ResetPriceFilter()
    {
        minPrice = globalMinPrice;
        maxPrice = globalMaxPrice;
        ApplyFilters();
    }

    public void Dispose()
    {
        searchTimer?.Dispose();
    }
}
