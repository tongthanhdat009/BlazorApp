@page "/products"
@layout CustomerLayout
@using BlazorApp.Services
@using BlazorApp.Dto
@inject IAuthService AuthService
@inject IProductService ProductService
@inject NavigationManager Navigation

<PageTitle>Sản phẩm - Store Manager</PageTitle>

<div class="products-container">
    <div class="products-header">
        <div>
            <h1>
                <i class="bi bi-grid-3x3-gap-fill me-3"></i>
                Danh sách sản phẩm
            </h1>
            <p class="text-muted">Khám phá các sản phẩm chất lượng của chúng tôi</p>
        </div>
    </div>

    <div class="filters-section">
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" 
                   placeholder="Tìm kiếm sản phẩm..." 
                   @bind="searchKeyword" 
                   @bind:event="oninput"
                   @onkeyup="OnSearchKeyup" />
        </div>
        <div class="category-filters">
            <button class="filter-btn @(string.IsNullOrEmpty(selectedCategoryName) ? "active" : "")" 
                    @onclick="() => FilterByCategory(null)">
                Tất cả
            </button>
            @foreach (var category in categories)
            {
                <button class="filter-btn @(selectedCategoryName == category.CategoryName ? "active" : "")" 
                        @onclick="() => FilterByCategory(category.CategoryName)">
                    @category.CategoryName
                </button>
            }
        </div>
    </div>

    <div class="page-size-selector">
        <label>Hiển thị:</label>
        <select @bind="pageSize" @bind:after="OnPageSizeChanged">
            <option value="12">12 sản phẩm</option>
            <option value="24">24 sản phẩm</option>
            <option value="36">36 sản phẩm</option>
            <option value="48">48 sản phẩm</option>
        </select>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-success" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Đang tải sản phẩm...</p>
        </div>
    }
    else if (filteredProducts.Count == 0)
    {
        <div class="empty-state">
            <i class="bi bi-box-seam"></i>
            <p>Không tìm thấy sản phẩm nào</p>
        </div>
    }
    else
    {
        <div class="products-grid">
            @foreach (var product in paginatedProducts)
            {
                <div class="product-card" @onclick="() => ViewProduct(product.ProductId)">
                    <div class="product-image">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.ProductName" />
                        }
                        else
                        {
                            <div class="no-image">
                                <i class="bi bi-image"></i>
                            </div>
                        }
                    </div>
                    <div class="product-info">
                        <h5 class="product-name">@product.ProductName</h5>
                        @if (!string.IsNullOrEmpty(product.CategoryName))
                        {
                            <span class="product-category">
                                <i class="bi bi-tag"></i>
                                @product.CategoryName
                            </span>
                        }
                        <div class="d-flex align-items-center justify-content-between">
                            <p class="product-price mb-0">@product.Price.ToString("N0") đ</p>
                            <span class="badge @(product.IsInStock ? "bg-success" : "bg-danger")">
                                @product.StockStatus
                            </span>
                        </div>
                        <div class="view-detail">
                            <span>Xem chi tiết</span>
                            <i class="bi bi-arrow-right"></i>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <div class="pagination">
                <button class="page-btn" @onclick="() => ChangePage(1)" disabled="@(currentPage == 1)">
                    <i class="bi bi-chevron-double-left"></i>
                </button>
                <button class="page-btn" @onclick="() => ChangePage(currentPage - 1)" disabled="@(currentPage == 1)">
                    <i class="bi bi-chevron-left"></i>
                </button>

                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                {
                    var pageNumber = i;
                    <button class="page-btn @(currentPage == pageNumber ? "active" : "")" 
                            @onclick="() => ChangePage(pageNumber)">
                        @pageNumber
                    </button>
                }

                <button class="page-btn" @onclick="() => ChangePage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                    <i class="bi bi-chevron-right"></i>
                </button>
                <button class="page-btn" @onclick="() => ChangePage(totalPages)" disabled="@(currentPage == totalPages)">
                    <i class="bi bi-chevron-double-right"></i>
                </button>
            </div>

            <div class="pagination-info">
                <span>Hiển thị @((currentPage - 1) * pageSize + 1) - @Math.Min(currentPage * pageSize, filteredProducts.Count) trong tổng số @filteredProducts.Count sản phẩm</span>
            </div>
        }
    }
</div>

